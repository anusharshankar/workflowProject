@model WorkflowProject.Models.Action

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Action</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ATitle" class="control-label"></label>
                <input asp-for="ATitle" class="form-control" />
                <span asp-validation-for="ATitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ADesc" class="control-label"></label>
                <input asp-for="ADesc" class="form-control" />
                <span asp-validation-for="ADesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Departments" class="control-label"></label>
                <input asp-for="Departments" class="form-control" />
                <span asp-validation-for="Departments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsSRSAffected" /> @Html.DisplayNameFor(model => model.IsSRSAffected)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ProcessId" class="control-label"></label>
                <select asp-for="ProcessId" class="form-control" asp-items="ViewBag.ProcessId"></select>
                <span asp-validation-for="ProcessId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
